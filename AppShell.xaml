<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="StudentsCollection.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:StudentsCollection"
    xmlns:views="clr-namespace:StudentsCollection.Views"
    Shell.FlyoutBehavior="Flyout">

    <TabBar Title="Tabbbbs">
        <Tab Title="Filter">
            <ShellContent
                Title="FilterPage"
                ContentTemplate="{DataTemplate views:StudentsFilterPage}"
                Route="Filter" />
        </Tab>
        <Tab Title="ContextMenu">
            <ShellContent ContentTemplate="{DataTemplate views:StudentsWithRefreshPage}" Route="Refresh" />
        </Tab>
    </TabBar>
    <FlyoutItem Title="Home">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:StudentsBasicPage}"
            Route="MainPage" />
    </FlyoutItem>

</Shell>
